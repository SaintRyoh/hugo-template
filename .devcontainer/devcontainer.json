{
  "name": "Hugo & pnpm",

  "build": {
    "dockerfile": "Dockerfile"
  },

  // Mount host .gitconfig to share git user name/email with container
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  // "features": { "ghcr.io/devcontainers/features/docker-in-docker:2": {} },

  // ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "html.format.templating": true
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "rusnasonov.vscode-hugo",
        "budparr.language-hugo-vscode",
        "eliostruyf.vscode-hugo-themer",
        "kaellarkin.hugo-shortcode-syntax",
        "davidanson.vscode-markdownlint",
        "streetsidesoftware.code-spell-checker",
        "bierner.markdown-checkbox",
        "SanaAjani.taskrunnercode"
      ]
    }
  },

  "remoteUser": "vscode"
}
